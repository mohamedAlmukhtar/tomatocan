<div class="alert">
          <% flash.each do |key, value| %>
            <div class="<%= flash_class(key) %>">
              <%= value %>
            </div>
          <% end %>
</div>
  <div class="col-lg-5 col-md-11">
      <div id="home">
        <h1 style="display:inline;" class="text-secondary" > 
          <strong>Conversations to make you THINQ</strong>
        </h1>
        <div style="display:inline;" > 
          <%= image_tag("logoGold60.png", style: "margin-bottom: 20px")%><br>
        </div>
        <h4 class="text-secondary" > 
          <strong>Video Chat about the latest News Headlines</strong>
        </h4><br><br><br>

        <h4 class="text-primary"><i>New to ThinQ.tv?</i>
          <br>Most of the day we have a video chat <i><%= link_to "Study Hall", studyhall_path, class: "text-secondary" %></i>.
          <br>Drop in to ask questions about ThinQ.tv! </h4>

        <% if @displaystudy.present? %>
          <% if (Time.current > Time.parse(@start_timestudy)) && (Time.current < Time.parse(@end_timestudy)) %>
            <div id="eventCurrentdiv">
              <h5 class="text-primary">We're having Study Hall for <%= link_to @namestudy, event_path(@displaystudy.id), title: @descriptionstudy%> right NOW!</h5><br>
              <%= link_to " Join Study Hall ", "https://thinqtv.herokuapp.com/" + @hoststudy.permalink + "?chatrm=Study%20Hall", class: "btn btn-primary btn-lg fa fa-video-camera"%>
            </div>
          <% end %>
        <% end %>
        <% if @displayresearch.present? %> 
          <% if (Time.current > Time.parse(@start_timeresearch)) && (Time.current < (Time.parse(@start_timeresearch) + 1.hour)) %>
            <div id="eventCurrentdiv">
              <p class="text-primary">We're working on User Research about <%= link_to @namestudy, event_path(@displayresearch.id), class: "text-secondary" %></p>  
              <p class="text-primary"> right NOW!</p><br>
              <%= link_to " Join User Research Chat", "https://thinqtv.herokuapp.com/" + @hostresearch.permalink + "?chatrm=User%20Research", class: "btn btn-primary btn-lg fa fa-video-camera"%>
            </div>
          <% end %>
        <% end %>
        <% if @displaystudy.present? && @displayresearch.present? %>
          <% if !(Time.current > Time.parse(@start_timeresearch)) && (Time.current < (Time.parse(@start_timeresearch) + 1.hour)) %>
            <% if !(Time.current > Time.parse(@start_timestudy)) && (Time.current < (Time.parse(@start_timestudy) + 1.hour)) %>
              <h2 id="buttonTitle" style="">
              <%= link_to 'See an example Live Video Conversation Room', "https://thinqtv.herokuapp.com/youronlinemom", class: "btn btn-lg btn-primary", title: "Check your webcam" %>
              </h2>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
    <hr>

  <div class="col-lg-7 col-md-12" id="countdown_clock">
    <div class="main">
      <br>
      <div class="col-lg-3 col-md-6" >
        <h2>Conversation Schedule</h2>
        <h4>Come talk about topics important to you in the 2020 US election!</h4>
          <% if user_signed_in? %>
            <%= link_to 'Post your Own Conversation', new_event_path, class: "btn btn-warning", title: "Host drop-in conversation sessions or invite people to ask questions about your area of expertise" %>
          <% end %>
      </div>
      <div class="col-lg-3 col-md-6">
        <%= render 'layouts/countdown_clock' %>
      </div>
    </div>
    <div class="tabContainer">
        <div class="buttonContainer">
          <button class="btn btn-primary" onclick="showPanel(0,'#f44336')">List View </button>
          <button class="btn btn-primary"  onclick="showPanel(1,'#4caf50')">Monthly View </button>
          <!-- <button onclick="showPanel(2,'#2196f3')">Weekly View</button> -->
        </div>
      <div class="tabPanel">
        <%= render 'layouts/convocalendar', collection: @conversations %> 
      </div>
      <div class="tabPanel">
        <%= render 'layouts/monthconvocalendar', collection: @conversationsall %>
      </div> 
    </div>
  </div>

<br><br><br>
    <script type="text/javascript">
      showPanel(0,'#f44336');
    </script>